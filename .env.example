# slop-pi Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# Supabase
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# USDA FoodData Central
# Get your free API key at: https://fdc.nal.usda.gov/api-key-signup.html
# =============================================================================
USDA_API_KEY=your-usda-api-key

# =============================================================================
# OpenAI
# =============================================================================
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# Push Notifications (ntfy.sh)
# Create a private topic at: https://ntfy.sh
# =============================================================================
NTFY_SERVER=https://ntfy.sh
NTFY_TOPIC=your-private-topic-name

# =============================================================================
# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# =============================================================================
CRON_SECRET=your-random-secret-here

# =============================================================================
# Application
# =============================================================================
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# Data paths (inside container)
DATA_DIR=/app/data
USDA_CACHE_DB=/app/data/usda_cache.db
